# Log Rotation Configuration
# Save this as /etc/logrotate.d/pi-server

/mnt/external/logs/*.log {
    daily
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    create 644 [username] [username]
    postrotate
        # Restart services if needed
        # docker compose restart nginx
    endscript
}

